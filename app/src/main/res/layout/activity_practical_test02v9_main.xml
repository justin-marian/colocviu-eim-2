<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/word_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduceți cuvântul"
        android:importantForAutofill="no"
        android:inputType="text"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/min_length_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="number"
        android:hint="Introduceți lungimea minimă"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/fetch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obține anagrame"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rezultatul va apărea aici"
        android:paddingTop="16dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/open_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deschide Harta"
        android:layout_marginTop="16dp"
        android:layout_below="@id/fetch_button"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
</LinearLayout>
